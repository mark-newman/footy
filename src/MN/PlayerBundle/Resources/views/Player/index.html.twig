{% extends 'MNUsefulBundle::admin_layout.html.twig' %}

{% block content -%}
    <h1>Player list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Nickname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.lastname }}</td>
                <td>{{ entity.nickname }}</td>
                <td>
                    <div class="button-group">
                        <a class="btn btn-sm btn-primary" href="{{ path('admin_player_edit', { 'id': entity.id }) }}">edit</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-success" href="{{ path('admin_player_new') }}">
                Add a player
            </a>
        </div>
    </div>
{% endblock %}
