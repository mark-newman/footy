{% extends 'MNUsefulBundle::admin_layout.html.twig' %}

{% block content -%}
    <h1>Team Category list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>
                    <div class="button-group">
                        <a class="btn btn-sm btn-primary" href="{{ path('admin_teamcategory_edit', { 'id': entity.id }) }}">edit</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-success" href="{{ path('admin_teamcategory_new') }}">
                Add a game
            </a>
        </div>
    </div>

    {% endblock %}
